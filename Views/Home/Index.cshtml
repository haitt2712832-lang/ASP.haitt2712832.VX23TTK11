@model List<FootballManagerMVC.Models.Field>
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<div class="hero-section py-5">
    <div class="hero-bg"></div>
    <div class="hero-content">
        <div class="container py-5">
            <div class="row justify-content-center text-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-4">Hệ thống quản lý sân bóng đá mini</h1>
                    <p class="lead mb-4">
                        Đặt sân bóng đá mini dễ dàng, nhanh chóng với hệ thống hiện đại. 
                        Nhiều sân chất lượng cao, giá cả hợp lý, phục vụ 24/7.
                    </p>
                    <div class="row g-3 justify-content-center">
                        <div class="col-auto">
                            <div class="d-flex align-items-center bg-white bg-opacity-25 rounded-pill px-3 py-2">
                                <i class="fas fa-star text-warning me-2"></i>
                                <span>Chất lượng cao</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="d-flex align-items-center bg-white bg-opacity-25 rounded-pill px-3 py-2">
                                <i class="fas fa-map-marker-alt text-info me-2"></i>
                                <span>Vị trí thuận tiện</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="d-flex align-items-center bg-white bg-opacity-25 rounded-pill px-3 py-2">
                                <i class="fas fa-phone text-success me-2"></i>
                                <span>Hỗ trợ 24/7</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <!-- Search and Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="get" asp-action="Index">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                                    <input type="text" class="form-control" name="searchTerm" 
                                           value="@ViewBag.SearchTerm" placeholder="Tìm kiếm sân bóng...">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-filter"></i></span>
                                    <select class="form-select" name="priceFilter">
                                        <option value="all" selected="@(ViewBag.PriceFilter == "all")">Tất cả giá</option>
                                        <option value="low" selected="@(ViewBag.PriceFilter == "low")">Dưới 150k/giờ</option>
                                        <option value="medium" selected="@(ViewBag.PriceFilter == "medium")">150k - 250k/giờ</option>
                                        <option value="high" selected="@(ViewBag.PriceFilter == "high")">Trên 250k/giờ</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="stats-card">
                <div class="display-6 fw-bold text-success mb-2">@ViewBag.TotalFields</div>
                <div class="text-muted">Sân bóng</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card">
                <div class="display-6 fw-bold text-primary mb-2">24/7</div>
                <div class="text-muted">Hỗ trợ</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card">
                <div class="display-6 fw-bold text-warning mb-2">100%</div>
                <div class="text-muted">Tin cậy</div>
            </div>
        </div>
    </div>

    <!-- Fields Grid -->
    <div class="mb-5">
        <h2 class="text-center mb-4 fw-bold">Danh sách sân bóng</h2>
        @if (Model.Count == 0)
        {
            <div class="text-center py-5">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <p class="text-muted fs-5">Không tìm thấy sân bóng phù hợp</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var field in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card field-card h-100">
                            <div class="position-relative">
                                <img src="@field.Image" class="card-img-top field-image" alt="@field.Name">
                                <div class="price-badge">
                                    @field.PricePerHour.ToString("N0")đ/giờ
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">@field.Name</h5>
                                <p class="card-text text-muted flex-grow-1">@field.Description</p>
                                
                                <div class="mb-3">
                                    @{
                                        var features = new List<string>();
                                        try
                                        {
                                            features = System.Text.Json.JsonSerializer.Deserialize<List<string>>(field.Features) ?? new List<string>();
                                        }
                                        catch
                                        {
                                            features = new List<string>();
                                        }
                                    }
                                    @foreach (var feature in features.Take(3))
                                    {
                                        <span class="feature-badge">@feature</span>
                                    }
                                </div>

                                <div class="row g-2 mb-3 small text-muted">
                                    <div class="col-6">
                                        <i class="fas fa-users me-1"></i>@field.Size
                                    </div>
                                    <div class="col-6">
                                        <i class="fas fa-layer-group me-1"></i>@field.Surface
                                    </div>
                                    <div class="col-12">
                                        <i class="fas fa-map-marker-alt me-1"></i>@field.Location
                                    </div>
                                </div>

                                <div class="d-grid">
                                    <a href="@Url.Action("FieldDetail", "Home", new { id = field.Id })" 
                                       class="btn btn-primary">
                                        <i class="fas fa-eye me-2"></i>Xem chi tiết
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Contact Section -->
    <div class="contact-section">
        <h3 class="mb-3">Liên hệ với chúng tôi</h3>
        <p class="mb-4">Có thắc mắc gì? Chúng tôi luôn sẵn sàng hỗ trợ bạn 24/7</p>
        <div class="row justify-content-center">
            <div class="col-auto">
                <div class="d-flex align-items-center me-4">
                    <i class="fas fa-phone me-2"></i>
                    <span>0123 456 789</span>
                </div>
            </div>
            <div class="col-auto">
                <div class="d-flex align-items-center">
                    <i class="fas fa-envelope me-2"></i>
                    <span>info@footballmanager.vn</span>
                </div>
            </div>
        </div>
    </div>
</div>