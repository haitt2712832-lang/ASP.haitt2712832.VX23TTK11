@model List<FootballManagerMVC.Models.Booking>
@{
    ViewData["Title"] = "Lịch đặt sân của tôi";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold"><i class="fas fa-calendar-alt me-2"></i>Lịch đặt sân của tôi</h2>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Đặt sân mới
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Bạn chưa có lịch đặt sân nào</h4>
                    <p class="text-muted">Hãy đặt sân ngay để bắt đầu trải nghiệm!</p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                        <i class="fas fa-futbol me-2"></i>Đặt sân ngay
                    </a>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var booking in Model)
                    {
                        <div class="col-lg-6">
                            <div class="card h-100 @(booking.Status == "cancelled" ? "border-danger" : booking.Status == "confirmed" ? "border-success" : "border-warning")">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0 fw-bold">@booking.Field.Name</h6>
                                    <span class="badge @(booking.Status switch {
                                        "pending" => "bg-warning",
                                        "confirmed" => "bg-success", 
                                        "cancelled" => "bg-danger",
                                        "completed" => "bg-secondary",
                                        _ => "bg-secondary"
                                    })">
                                        @(booking.Status switch {
                                            "pending" => "Chờ xác nhận",
                                            "confirmed" => "Đã xác nhận", 
                                            "cancelled" => "Đã hủy",
                                            "completed" => "Hoàn thành",
                                            _ => booking.Status
                                        })
                                    </span>
                                </div>
                                <div class="card-body">
                                    <div class="row g-3 mb-3">
                                        <div class="col-6">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-calendar text-primary me-2"></i>
                                                <div>
                                                    <small class="text-muted d-block">Ngày</small>
                                                    <strong>@booking.Date.ToString("dd/MM/yyyy")</strong>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-clock text-success me-2"></i>
                                                <div>
                                                    <small class="text-muted d-block">Giờ</small>
                                                    <strong>@booking.StartTime.ToString(@"hh\:mm") - @booking.EndTime.ToString(@"hh\:mm")</strong>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-hourglass-half text-warning me-2"></i>
                                                <div>
                                                    <small class="text-muted d-block">Thời gian</small>
                                                    <strong>@booking.Duration giờ</strong>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-money-bill text-danger me-2"></i>
                                                <div>
                                                    <small class="text-muted d-block">Tổng tiền</small>
                                                    <strong>@booking.TotalPrice.ToString("N0")đ</strong>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(booking.Notes))
                                    {
                                        <div class="mb-3">
                                            <small class="text-muted">Ghi chú:</small>
                                            <p class="mb-0">@booking.Notes</p>
                                        </div>
                                    }

                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            Đặt lúc: @booking.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                        
                                        @if (booking.Status == "pending" || booking.Status == "confirmed")
                                        {
                                            <form asp-action="Cancel" method="post" class="d-inline"
                                                  onsubmit="return confirm('Bạn có chắc muốn hủy đặt sân này?')">
                                                <input type="hidden" name="id" value="@booking.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                                    <i class="fas fa-times me-1"></i>Hủy
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>